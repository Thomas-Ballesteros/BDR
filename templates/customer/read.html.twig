{% set title = "Clients - Facture 3000" %}

{% block title title %}

{% block body %}
<div class="container">

    <header class="page-header">
        <h2 class="page-title">{{ title }}</h2>
    </header>

    <div class="row">
        <div class="col-12">

            <div>
                <strong>Nom</strong> {{ customer.lastname }}
            </div>
            <div>
                <strong>Pr√©nom</strong> {{ customer.firstname }}
            </div>
            <div>
                <strong>Adresse</strong> {{ customer.address }}
            </div>
            <div>
                <strong>Email</strong> {{ customer.email }}
            </div>

            <hr>

            <table class="table">
                <thead>
                    <tr>
                        <th>Facture #</th>
                        <th>Montant</th>
